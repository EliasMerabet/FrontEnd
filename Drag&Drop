	$(function () {
            $(".sortable").sortable({
                placeholder: {
                    element: function (currentItem) {
                        return $('<span class="placeholder glyphicon glyphicon-refresh"></span>');
                    },
                    update: function (container, p) {
                        return;
                    }
                },
                opacity: 0.5
            });
            $(".sortable").disableSelection();
        });


